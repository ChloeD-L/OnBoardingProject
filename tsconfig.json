{
  "compilerOptions": {
    "target": "es2022",                 // Set the JavaScript target version
    "module": "CommonJS",               // Change this from 'esnext' to 'CommonJS'
    "moduleResolution": "node",         
    "esModuleInterop": true,            
    "lib": ["es2021", "dom"],           
    "allowJs": true,                    
    "outDir": "./dist",                 
    "declaration": false,               
    "strict": true,                     
    "noImplicitAny": true,              
    "strictNullChecks": true,           
    "noImplicitThis": true,             
    "alwaysStrict": true,               
    "noUnusedLocals": false,            
    "noUnusedParameters": false,        
    "noImplicitReturns": true,          
    "noFallthroughCasesInSwitch": false,
    "sourceMap": true,                  
    "inlineSources": true,              
    "experimentalDecorators": false,    
    "strictPropertyInitialization": false,
    "typeRoots": ["./node_modules/@types"],
    "resolveJsonModule": true,          
    "skipLibCheck": true,               // Add this if you want to skip type checking of declaration files.
    "isolatedModules": false            // Set this to false unless you are using a transpiler like Babel
  },
  "exclude": ["node_modules", "dist"]    // You can exclude directories from the compilation
}

  